<div class="navbar-wagon">
  <div class="searchbar navbar-wagon-item">
    <div id="searchbar"></div>
    <div id="search-button">
       <i class="mdi mdi-magnify mdi-36px" aria-hidden="true"></i>
    </div>
  </div>
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "aries-symbol.svg", height: 36 %>
  <% end %>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <%= link_to new_memory_path, class: 'navbar-wagon-link', id: 'add-memory',
      data: { target_url: new_memory_url } do %>
       <i class="mdi mdi-plus mdi-48px" aria-hidden="true"></i>
    <% end %>
  </div>
</div>

